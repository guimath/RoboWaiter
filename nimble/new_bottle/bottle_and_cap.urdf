<?xml version="0.0" ?>
<robot name="bottle_and_cap.urdf">
  <link name="bottle">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="bottle.obj" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="bottle_color">
        <color rgba="0.85 0.85 0.85 1.0"/>
      </material>
    </visual>
  </link>

  <link name="cap">
    <visual>
      <origin rpy="0 0 3.14" xyz="0 0 0"/>
      <geometry>
        <mesh filename="cap.obj" scale=".01 .01 .01"/>
      </geometry>
      <material name="grey">
        <color rgba="0.85 0.85 0.85 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="cap_joint" type="revolute">
    <parent link="bottle"/>
    <child link="cap"/>
    <origin xyz="0 .6 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="6.28319" effort="100" velocity="0.5"/>
  </joint>
</robot>
